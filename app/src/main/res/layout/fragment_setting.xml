<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBodyColor"
    tools:context=".view.activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            style="@style/viewParent.headerText"
            android:text="Cài đặt" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCircleImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo_carr"
                app:civ_border_color="@color/imageBorderColor"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/usernameTextView"
                style="@style/viewParent.headerText"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/profileCircleImageView"
                android:text="Chưa đăng nhập"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_editProfile2"
                style="@style/viewParent.headerText"
                android:layout_below="@id/usernameTextView"
                android:layout_toRightOf="@id/profileCircleImageView"
                android:text="Chỉnh sửa thông tin cá nhân"
                android:textColor="#5D5C5C"
                android:textSize="16sp" />

            <ImageView
                style="@style/viewParent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_more" />

        </RelativeLayout>

        <Switch
            android:id="@+id/darkModeSwitch"
            style="@style/settingsText"
            android:drawableLeft="@drawable/ic_dark_mode"
            android:text="Chế độ tối" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Hồ sơ" />

        <TextView
            android:id="@+id/textView_editProfile"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/ic_edit_profile"
            android:text="Chỉnh sửa hồ sơ" />

        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_edit_password"
            android:text="Đổi mật khẩu" />
        <TextView
            android:id="@+id/textView_motorbike.rental"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/motorbike_rent"
            android:text="Xe cho thuê" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Thông báo" />

        <Switch
            style="@style/settingsText"
            android:checked="true"
            android:drawableLeft="@drawable/ic_notifications"
            android:text="Thông báo" />

        <TextView
            style="@style/viewParent.headerText.settingsMiniTitle"
            android:text="Quản lý" />
        <TextView
            android:id="@+id/textView_order"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/motorcycle"
            android:text="Đơn hàng của bạn"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/textView_manager"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/analytics"
            android:text="Nhà phân phối"
            android:visibility="visible"/>

        <TextView
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/ic_languages"
            android:text="Ngôn ngữ" />

        <TextView
            android:id="@+id/textView_logout"
            style="@style/viewParent.headerText.settingsTextIcon"
            android:drawableLeft="@drawable/ic_logout"
            android:text="Đăng xuất" />

    </LinearLayout>
</ScrollView>